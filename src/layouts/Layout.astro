---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import WhatsAppBtn from "../components/WhatsAppBtn.astro";

// Definir props para contenido dinámico
interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
  keywords?: string[];
}

const {
  title = "Divcal BPO | Soluciones de Contact Center Omnicanal en Perú",
  description = "Divcal BPO es una empresa especializada en servicios de Contact Center Omnicanal, atención al cliente, televentas y back office. Soluciones BPO personalizadas.",
  canonicalUrl = Astro.url.href,
  ogImage = "/og-image.jpg", // Cambiar esta ruta
  keywords = [
    "BPO Perú",
    "contact center",
    "atención al cliente",
    "servicios BPO",
    "call center",
    "televentas",
    "back office",
    "soporte omnicanal",
    "gestión de clientes",
    "outsourcing Perú"
  ],
} = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="es-PE">
  <head>
    <!-- Meta Charset & Viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ========== IMPORTANTE: CAMBIOS DE IMÁGENES ========== -->
    <!-- 
      1. Favicon: Debe estar en /public/favicon.ico (formato ICO) o PNG
      2. OG Image: Debe estar en /public/og-image.jpg (1200x630px, JPG/PNG)
    -->

    <!-- Favicon - MULTIPLES FORMATOS PARA MEJOR COMPATIBILIDAD -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- TÍTULO SEO (Máximo 60 caracteres) -->
    <title>{title}</title>

    <!-- DESCRIPCIÓN SEO (Máximo 160 caracteres) -->
    <meta name="description" content={description} />

    <!-- KEYWORDS (Opcional, pero útil) -->
    <meta name="keywords" content={keywords.join(", ")} />

    <!-- AUTHOR y COPYRIGHT -->
    <meta name="author" content="Divcal BPO" />
    <meta name="copyright" content="Divcal BPO" />

    <!-- CANONICAL URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- ROBOTS -->
    <meta name="robots" content="index, follow" />

    <!-- GEO TAGS (Para Perú) -->
    <meta name="geo.region" content="PE-LIM" />
    <meta name="geo.placename" content="Lima, Perú" />
    <meta name="geo.position" content="-12.046374;-77.042793" />
    <meta name="ICBM" content="-12.046374, -77.042793" />

    <!-- OPEN GRAPH PARA REDES SOCIALES -->
    <meta property="og:locale" content="es_PE" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Divcal BPO" />
    <meta property="og:image" content={`https://divcal.com${ogImage}`} />
    <meta property="og:image:secure_url" content={`https://divcal.com${ogImage}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Divcal BPO - Soluciones de Contact Center Omnicanal" />
    <meta property="og:image:type" content="image/jpeg" />

    <!-- TWITTER CARD -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@divcal_bpo" />
    <meta name="twitter:creator" content="@divcal_bpo" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`https://divcal.com${ogImage}`} />
    <meta name="twitter:image:alt" content="Divcal BPO - Soluciones de Contact Center" />

    <!-- META TÉCNICOS -->
    <meta name="theme-color" content="#1e40af" />
    <meta http-equiv="Content-Language" content="es" />
    <meta name="language" content="Spanish" />

    <!-- PRE-CONNECT PARA MEJOR PERFORMANCE -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- SCHEMA MARKUP PARA BPO/CONTACT CENTER -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Divcal BPO",
        "alternateName": "Divcal",
        "url": "https://divcal.com",
        "logo": "https://divcal.com/logo-divcal.png",
        "description": "Empresa líder en soluciones BPO de Contact Center Omnicanal en Perú. Especialistas en atención al cliente, televentas y servicios de back office.",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "PE",
          "addressRegion": "Lima",
          "addressLocality": "Lima"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "telephone": "+51997959646",
          "availableLanguage": "Spanish"
        },
        "sameAs": [
          "https://www.facebook.com/divcalbpo",
          "https://www.linkedin.com/company/divcal-bpo",
          "https://twitter.com/divcal_bpo"
        ]
      }
    </script>

    <!-- Estilos globales -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <slot />
    <WhatsAppBtn 
      phone="51997959646" 
      message="Hola! Me gustaría conocer más sobre los servicios de DIVCAL y cómo podrían ayudar a nuestra empresa. ¿Podrían darme más información?" 
    />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>