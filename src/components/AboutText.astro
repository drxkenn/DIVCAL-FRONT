---
// src/components/AboutText.astro
interface Props {
  title?: string;
  className?: string;
}

const { title = "Sobre Nosotros", className = "" } = Astro.props;
---

<div class={`relative ${className}`}>
  <!-- Fondo decorativo -->
  <div class="absolute -top-4 -left-4 w-24 h-24 bg-celeste-300 rounded-full opacity-10 blur-xl"></div>
  <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-celeste-400 rounded-full opacity-10 blur-xl"></div>
  
  <!-- Tarjeta principal -->
  <div class="relative bg-gradient-to-br from-white/10 to-celeste-50/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 md:p-10 shadow-2xl shadow-celeste-900/20">
    
    <!-- Título con acento decorativo -->
    <div class="flex items-center gap-4 mb-8">
      <div class="w-12 h-1 bg-gradient-to-r from-celeste-400 to-celeste-300 rounded-full"></div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white">
        {title}
      </h2>
    </div>
    
    <!-- Contenido del párrafo -->
    <div class="space-y-6">
      <div class="space-y-4">
        <slot name="paragraph" />
      </div>
      
      <!-- Texto destacado con diseño especial -->
      <div class="relative mt-10 pt-6 border-t border-white/20">
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
          <div class="w-6 h-6 bg-celeste-400 rounded-full flex items-center justify-center">
            <div class="w-3 h-3 bg-white rounded-full"></div>
          </div>
        </div>
        
        <blockquote class="relative">
          <div class="absolute -left-4 top-0 text-4xl text-celeste-300 opacity-50">"</div>
          <p class="text-lg md:text-xl font-medium text-white pl-6 pr-6 leading-relaxed italic">
            <slot name="highlight" />
          </p>
          <div class="absolute -right-4 bottom-0 text-4xl text-celeste-300 opacity-50">"</div>
        </blockquote>
        
        <!-- Firma decorativa -->
        <div class="flex items-center justify-end gap-2 mt-4">
          <div class="h-px w-12 bg-gradient-to-l from-celeste-300 to-transparent"></div>
          <span class="text-sm text-celeste-200 font-light">DIVCAL PE</span>
        </div>
      </div>
    </div>
    
    <!-- Elementos decorativos en esquinas -->
    <div class="absolute top-4 right-4 w-8 h-8 border-t border-r border-celeste-300/30 rounded-tr-2xl"></div>
    <div class="absolute bottom-4 left-4 w-8 h-8 border-b border-l border-celeste-300/30 rounded-bl-2xl"></div>
  </div>
</div>

<style>
  /* Animación sutil para el fondo */
  .relative > div:first-child {
    animation: float 8s ease-in-out infinite;
  }
  
  .relative > div:nth-child(2) {
    animation: float 12s ease-in-out infinite reverse;
  }
  
  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(10px, -10px); }
  }
</style>