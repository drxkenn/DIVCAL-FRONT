---
// src/components/AboutText.astro
type ColorTheme = "sky" | "celeste";

interface Props {
  title?: string;
  subtitle?: string;
  className?: string;
  highlightColor?: ColorTheme;
  showDivider?: boolean;
  showQuote?: boolean;
  highlightText?: string;
}

const { 
  title = "Sobre Nosotros",
  subtitle = "Quiénes Somos",
  className = "",
  highlightColor = "sky",
  showDivider = true,
  showQuote = true,
  highlightText = "Innovamos para crear soluciones que transforman el futuro"
} = Astro.props;

// Definir temas de color - MANTENIENDO CYAN-500 PARA EL TEXTO DE LA CITA
const themes = {
  sky: {
    text: "text-sky-500",
    bg: "bg-sky-500",
    border: "border-sky-300",
    quote: "text-cyan-500" // CAMBIADO A cyan-500
  },
  celeste: {
    text: "text-celeste-500",
    bg: "bg-celeste-500",
    border: "border-celeste-300",
    quote: "text-cyan-500" // CAMBIADO A cyan-500
  }
} as const;

const colors = themes[highlightColor];
---

<div class={`space-y-6 lg:space-y-8 ${className}`}>
  <!-- Subtítulo con barras decorativas -->
  {showDivider && (
    <div class="mb-6 lg:mb-12">
      <div class="flex items-center justify-center gap-3 sm:gap-4 mb-4">
        <div class={`w-12 sm:w-16 lg:w-24 h-1.5 rounded-full bg-cyan-500`}></div>
        <span class="font-bold uppercase tracking-widest text-base sm:text-lg lg:text-xl xl:text-2xl text-center text-cyan-500" style="letter-spacing: 0.2em;">
          {subtitle}
        </span>
        <div class={`w-12 sm:w-16 lg:w-24 h-1.5 rounded-full bg-cyan-500`}></div>
      </div>
    </div>
  )}

  <!-- Título principal -->
  {title && (
    <div class="mb-4 lg:mb-6">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 leading-tight">
        <slot name="title">
          {title}
        </slot>
      </h2>
    </div>
  )}

  <!-- Contenido principal -->
  <div class="space-y-4 lg:space-y-6">
    <slot name="content" />
    <div class="space-y-4">
      <slot />
    </div>
  </div>

  <!-- Cita destacada -->
  {showQuote && (
    <div class="relative mt-8 lg:mt-10 pt-6 border-t ${colors.border}">
      <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
        <div class={`w-6 h-6 bg-cyan-500 rounded-full flex items-center justify-center`}>
          <div class="w-3 h-3 bg-white rounded-full"></div>
        </div>
      </div>
      
      <div class="flex justify-center mx-auto w-fit max-w-3xl">
        <blockquote class={`text-lg sm:text-xl lg:text-2xl font-medium leading-relaxed italic text-center text-cyan-500`}>
          "{highlightText}"
        </blockquote>
      </div>
    </div>
  )}
</div>